            <!-- COLOR -->
            <Color x:Key="MainDarkColor">#026294</Color>
            <Color x:Key="MainPageBackgroundColor">#e3eaf2</Color>

            <Color x:Key="LightBlueLogoColor">#0089D1</Color>
            <Color x:Key="LightBlueBackgroundColor">#FAFDFE</Color>
            <Color x:Key="LightGrayBorderColor">#dee5e8</Color>
            <Color x:Key="BackGroundText">#fff</Color>
            <Color x:Key="ColorText">#404040</Color>
            <Color x:Key="TextColorBlack">Black</Color>
            <Color x:Key="BackgroundOfOrtherDetail">#eaeaea</Color>
            <Color x:Key="BackgroundMessage">#e86e05</Color>

            <!-- BORDER FARME STYLE -->
            <Style x:Key="BorderFrame" TargetType="Frame">
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="BorderColor" Value="{StaticResource LightGrayBorderColor}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="10" />
            </Style>

            <!-- ENTRY FARME STYLE -->
            <Style x:Key="EntryFrame" TargetType="Frame">
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="BorderColor" Value="{StaticResource LightGrayBorderColor}" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="CornerRadius" Value="15" />
            </Style>

            <!-- LIGHTBLUE BUTTON STYLE -->
            <Style x:Key="LightBlueButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource LightBlueLogoColor}" />
                <Setter Property="TextColor" Value="#FFF" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="15" />
            </Style>

            <!-- LIGHTBLUE OUTLINE BUTTON STYLE -->
            <Style x:Key="LightBlueOutlineButton" TargetType="Button">
                <Setter Property="BorderColor" Value="{StaticResource LightBlueLogoColor}" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="BackgroundColor" Value="#FFF" />
                <Setter Property="TextColor" Value="{StaticResource LightBlueLogoColor}" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="FontSize" Value="15" />
            </Style>

            <!--CLEAR DATA BUTTON-->
            <Style x:Key="ClearButtonStyle" TargetType="Button">
                <Setter Property="Text" Value="&#xf057;" />
                <Setter Property="TextColor" Value="#444444" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="BackgroundColor" Value="transparent" />
                <Setter Property="HeightRequest" Value="25" />
                <Setter Property="WidthRequest" Value="25" />
                <Setter Property="HorizontalOptions" Value="End" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,0,5,0" />
            </Style>

            <!--FLoatButtonStyle-->
            <Style x:Key="FLoatButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="WidthRequest" Value="44" />
                <Setter Property="HeightRequest" Value="44" />
                <Setter Property="CornerRadius" Value="22" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="{StaticResource MainDarkColor}" />
            </Style>
        </ResourceDictionary>

        <!--font awsome-->
        <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeBrands">
            <On Platform="Android" Value="FontAwesome5BrandsRegular.otf#Regular" />
            <On Platform="iOS" Value="FontAwesome5Brands-Regular" />
        </OnPlatform>

        <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeSolid">
            <On Platform="Android" Value="FontAwesome5Solid.otf#Regular" />
            <On Platform="iOS" Value="FontAwesome5Free-Solid" />
        </OnPlatform>

        <OnPlatform x:TypeArguments="x:String" x:Key="FontAwesomeRegular">
            <On Platform="Android" Value="FontAwesome5Regular.otf#Regular" />
            <On Platform="iOS" Value="FontAwesome5Free-Regular" />
        </OnPlatform>
    </Application.Resources>
</Application>