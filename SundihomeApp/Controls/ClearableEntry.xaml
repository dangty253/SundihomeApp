<?xml version="1.0" encoding="UTF-8" ?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SundihomeApp.Controls.ClearableEntry">
    <ContentView.Content>
        <Grid>
            <Entry x:Name="Entry" HorizontalOptions="FillAndExpand" FontSize="16" />
            <Button x:Name="BtnClear" Style="{StaticResource ClearButtonStyle}" Padding="0" FontFamily="{StaticResource FontAwesomeSolid}" Clicked="Clear_Clicked" />
        </Grid>
    </ContentView.Content>
</ContentView>
